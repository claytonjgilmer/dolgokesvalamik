<?xml version="1.0" encoding="utf-8"?>
<VisualStudioToolFile
	Name="CudaCompile"
	Version="8.00"
	>
	<Rules>
		<CustomBuildRule
			Name="CUDA"
			DisplayName="NVCC"
			CommandLine="nvcc.exe [emulation] [fastmath] [optimization] [definitions] [includes] -o [ofile]  [outtype] $(InputFileName)"
			Outputs="[ofile]"
			FileExtensions="*.cu"
			ExecutionDescription="NVCC Compiling..."
			>
			<Properties>
				<BooleanProperty
					Name="emulation"
					DisplayName="Enable Emulation Mode"
					Category="Default"
					Description="Compiles the code to run in emulation mode."
					Switch="-deviceemu"
				/>
				<BooleanProperty
					Name="fastmath"
					DisplayName="Use Fast Math"
					Category="Default"
					Description="Make use of the fast math library."
					Switch="-use_fast_math"
				/>
				<EnumProperty
					Name="optimization"
					DisplayName="Optimization Level"
					Category="Default"
					Description="Sets the optimization level, where level = 0, 1, 2, or 3.    (-O0, -O1, -O2, -O3)"
					>
					<Values>
						<EnumValue
							Value="0"
							Switch="-O0"
							DisplayName="Optimization Level 0 (-O0)"
						/>
						<EnumValue
							Value="1"
							Switch="-O1"
							DisplayName="Optimization Level 1 (-O1)"
						/>
						<EnumValue
							Value="2"
							Switch="-O2"
							DisplayName="Optimization Level 2 (-O2)"
						/>
						<EnumValue
							Value="3"
							Switch="-O3"
							DisplayName="Optimization Level 3 (-O3)"
						/>
					</Values>
				</EnumProperty>
				<StringProperty
					Name="definitions"
					DisplayName="Preprocessor Definitions"
					Description="Defines a text macro with the given name.    (-D[symbol])"
					Switch="-D&quot;[value]&quot;"
					Delimited="true"
					Inheritable="true"
				/>
				<StringProperty
					Name="includes"
					DisplayName="Include Paths"
					Description="Sets path for include file. A maximum of 10 -I options is allowed.    (-I [path])"
					Switch="-I&quot;[value]&quot;"
					DefaultValue="$(CUDA_INC_PATH), $(VCInstallDir)\include, $(VCInstallDir)\PlatformSDK\include"
					Delimited="true"
					Inheritable="true"
				/>
				<EnumProperty
					Name="outtype"
					DisplayName="Output"
					Category="Code Generation"
					Description="Ouput"
					>
					<Values>
						<EnumValue
							Value="0"
							Switch="-c"
							DisplayName="Object file"
						/>
						<EnumValue
							Value="1"
							Switch="-cuda"
							DisplayName="C file"
						/>
					</Values>
				</EnumProperty>
				<EnumProperty
					Name="ofile"
					DisplayName="Output File"
					Category="Code Generation"
					Description="Output File "
					>
					<Values>
						<EnumValue
							Value="0"
							Switch="$(IntDir)\$(InputName).obj"
							DisplayName="obj"
						/>
						<EnumValue
							Value="1"
							Switch="$(InputName).c"
							DisplayName="c"
						/>
					</Values>
				</EnumProperty>
			</Properties>
		</CustomBuildRule>
	</Rules>
</VisualStudioToolFile>
